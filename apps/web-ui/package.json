{
  "name": "hotpass-web-ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "prebuild": "node scripts/sync-tools.js",
    "dev": "vite",
    "build": "tsc && vite build",
    "start": "node server/index.mjs",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "preview:ci": "vite preview --host 0.0.0.0 --port 4173",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest run --coverage",
    "test:unit": "vitest run --coverage",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test --workers=2 --reporter=list",
    "test:axe": "playwright test tests/accessibility.spec.ts",
    "test:pa11y": "pa11y-ci --config pa11y.ci.json --json"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@tanstack/react-query": "^5.90.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "csurf": "^1.11.0",
    "date-fns": "^4.1.0",
    "busboy": "^1.6.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "idb": "^8.0.3",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.552.0",
    "oidc-client-ts": "^3.3.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.5",
    "reactflow": "^11.11.4",
    "tailwind-merge": "^3.3.1",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-docs": "^10.0.2",
    "@storybook/addon-links": "^10.0.2",
    "@storybook/react": "^10.0.2",
    "@storybook/react-vite": "^10.0.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.6",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.39.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-storybook": "10.0.2",
    "jsdom": "^27.1.0",
    "pa11y-ci": "^4.0.1",
    "postcss": "^8.5.6",
    "storybook": "^10.0.2",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.6",
    "wait-on": "^9.0.1"
  }
}
