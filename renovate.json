{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:weekends"
  ],
  "dependencyDashboard": true,
  "labels": [
    "scope:dependencies",
    "type:chore"
  ],
  "packageRules": [
    {
      "description": "Group uv CLI and Prefect extra updates for synchronized rollouts.",
      "matchDatasources": [
        "pypi"
      ],
      "matchManagers": [
        "pep621",
        "pip_requirements"
      ],
      "matchDepTypes": [
        "dependencies",
        "optionalDependencies"
      ],
      "groupName": "uv and Prefect extras",
      "additionalBranchPrefix": "uv-prefect-",
      "labels": [
        "scope:dependencies",
        "type:chore",
        "prefect",
        "uv"
      ],
      "schedule": [
        "after 21:00 on friday",
        "before 06:00 on monday"
      ],
      "automerge": true,
      "automergeType": "pr",
      "minimumReleaseAge": "1 day",
      "matchPackageNames": [
        "/^uv/",
        "/^prefect/"
      ]
    },
    {
      "description": "Surface automerge ready dependency bumps outside the uv/Prefect extras.",
      "matchManagers": [
        "pep621",
        "pip_requirements",
        "github-actions"
      ],
      "labels": [
        "scope:dependencies",
        "type:chore"
      ],
      "automerge": false,
      "matchPackageNames": [
        "!/^uv/",
        "!/^prefect/"
      ]
    }
  ]
}
